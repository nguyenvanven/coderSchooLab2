<!DOCTYPE html>
<html>
  <head>
    <title>Chatting with authentication</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navabar-light bg-faded">
        <ul class="nav navbar-nav">
            <li class="nav-item active">
                <%= link_to "Users", users_path, class: "nav-link" %>
            </li>
        </ul>
        <ul class="nav navbar-nav float-xs-right form-inline">
            <% if signed_in? %>
                <li class="nav-item glyphicon glyphicon-user">
                    <%= link_to current_user.first_name + current_user.last_name, messages_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "Log out", logout_path, class: "nav-link" %>
                </li>
            <% else %>
                 <li class="nav-item glyphicon glyphicon-user">
                    <%= link_to "Sign up", new_user_path, class: "nav-link" %>
                </li>
                <li class="nav-item glyphicon glyphicon-log-in">
                    <%= link_to "Sign in", login_path, class: "nav-link btn btn-primary" %>
                </li>
            <% end %>
        </ul>

  </nav>

  <%= flash_messages %>
    	<%= yield %>
    </div>
  </body>
</html>
