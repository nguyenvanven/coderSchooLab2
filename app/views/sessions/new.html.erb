<h1>Login</h1>
<div class="container">
	<%= form_tag login_submit_path, method:'post' %>
		<div class="form-group row">
			<div class="col-sm-1">
		 		<%= label_tag 'Email:'%>
		 	</div>
		 	<div class="col-sm-5">
		 		<%= text_field_tag :email%>
		 	</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-1">
			 	<%= label_tag "Password:" %>
			 </div>
			 <div class="col-sm-5">
		 		<%= password_field_tag :password %>
		 	 </div>
		</div>
		<%= submit_tag "Login", class:"btn btn-primary" %>
</div>