<h1>Add friends</h1>
<div class="container">
<p id="notice"><%= notice %></p>
<table class="table table-striped table-bordered table-condensed"  data-sort-name="username" data-sort-order="desc">
	<thread>
		<tr>
			<th data-field="username" data-sortable="true">Username</th>
			<th data-field="first_name" data-sortable="true">FullName</th>
			<th data-field="email" data-sortable="true">Email</th>
			<th></th>
		</tr>
	</thread>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.first_name + " " + user.last_name %></td>
			<td><%= user.email %></td>
			<td> <%= link_to "Add friend", friendships_path(:friend_id=>user.id), method:"post", class:"btn btn-primary" %> </td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>